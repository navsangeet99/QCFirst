<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" type="text/css" href="../css/style.css" >
		<link rel="stylesheet" type="text/css" href="../css/search-class.css" >
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
		<script src="./sign_out.js" defer></script>
		<title>QCFirst</title>
	</head>

	<body>
		<nav>
			<img class="img-fluid logo img" src="../img/Logo.png" alt="Queens College" onclick="window.location.href='/Index'">

			<form name="back_btn" action="/back_stud" method="post">
				<button name="signOut" type="submit" id="back" onclick="location.href='/student_homepage'">Back</button> 
			</form>

			<form name="logoutForm" class="form-logout"  action="/signOut" method="post">
				<button name="signOut" type="submit" id="out" onclick="location.href='/Index'">Sign Out</button> <!--logs out the user and redirect them to the professor log in-->

			</form> 
		</nav>

		<section id="search-form">
			<!-- TODO: align labels and inputs vertically in css & remove style attributes -->
			<h1>Search For a Class</h1>
			<form name="searchClass" class="searchClassForm" action="/searchClass" method="post">
				<label for="courseName">Course Name:</label>
				<input type="text" name="courseName" id="courseName"> 

				<label for="courseNum">Course Number:</label>
				<input type="text" name="courseNum" id="courseNum"> 

				<label for="semester">Semester:</label>
				<select name="semester" id="semester">
					<option value="spring">Spring</option>
					<option value="summer">Summer</option>
					<option value="fall">Fall</option>
					<option value="winter">Winter</option>
				</select>
				<button id="search-class-btn" class="btn btn-primary" >Search</button>
			</form>
		</section>

		<section id="search-results">
			<h2>Course Name</h2>
			<table class="classTable container">
				<thead>
					<tr class="row">
						<th class="col">Course Number</th>
						<th class="col">Course Id</th>
						<th class="col">Class Date</th>
						<th class="col">Time</th>
						<th class="col">Instructor</th>
						<th class="col">Capacity</th>
						<th class="col">Enrollment Deadline</th>
						<!-- If student clicks INFO then pop up screen with description appears -->
						<th class="col">Course Description</th> 
						<th class="col">Enroll</th>
					</tr>
				</thead>

				<tbody>
					<form name="queriedClasses" action="/queriedClasses" method="post">
						<% if(print != null) {
							print.forEach( function(user) { %>
								<tr class="row">
									<td class="col"><%= user.courseId %></td>
									<td class="col"><%= user.days %></td>
									<td class="col"><%= user.start %></td>
									<td class="col"><%= user.instructor %></td>
									<td class="col"><%= user.capacity %></td>
									<td class="col"><%= user.enrollDead %></td>   
									<td class="col"><%= user.description %></td>
									<td class="col"><input type="radio" id="isEnroll" name="isEnroll" value= <%= user.courseId %>></td>           
								</tr>
							<% }) 
							{ %> <button id="enrollBtn" class="btn btn-primary">Enroll</button> <% } 
						} %>
					</form>
				</tbody>
			</table>
		</section>
		<footer>&copy;QCFirst@2021Nav&Bibi &#124; privacyPolicy</footer>
	</body>
</html>
<!--id=isEnroll is duplicate, and input tags need labels tags-->
